<div class="row devise_content">
  <h2>Cambia tu contrase単a</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.password_field :password, :autofocus => true, placeholder: "Nueva contrase単a" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, placeholder: "Confirma tu nueva contrase単a" %>
    </div>

    <div><%= f.submit "Cambia mi contrase単a" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>