<div class="row devise_content">
  <h2>Editar <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.email_field :email, :autofocus => true, placeholder: "Correo electrónico" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Esperando confirmación de: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div>
      <%= f.password_field :password, :autocomplete => "off", placeholder: "Contraseña" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, placeholder: "Confirmar contraseña" %>
    </div>

    <div>
      <%= f.password_field :current_password, placeholder: "Contraseña actual" %>
    </div>

    <div>
      <%= f.text_field :first_name, placeholder: "Nombre" %>
    </div>

    <div>
      <%= f.text_field :last_name, placeholder: "Apellido" %>
    </div>

    <div>
      <%= f.text_field :phone_number, placeholder: "Teléfono" %>
    </div>

    <div>
      <%= f.text_field :location, placeholder: "Dirección" %>
    </div>

    <div><%= f.submit "Actualizar" %></div>
  <% end %>

  <h3>Cancelar mi cuenta</h3>

  <p><%= button_to "Cancela mi cuenta", registration_path(resource_name), :data => { :confirm => "Estás seguro?" }, :method => :delete %></p>
</div>