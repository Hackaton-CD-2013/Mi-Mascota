<div class="row devise_content">
  <h2>Registro</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.email_field :email, :autofocus => true, placeholder: "Correo electrónico" %>
    </div>

    <div>
      <%= f.password_field :password, placeholder: "Contraseña" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, placeholder: "Confirma contraseña" %>
    </div>

    <div>
      <%= f.text_field :first_name, placeholder: "Nombre" %>
    </div>

    <div>
      <%= f.text_field :last_name, placeholder: "Apellido" %>
    </div>

    <div>
      <%= f.text_field :phone_number, placeholder: "Teléfono" %>
    </div>

    <div>
      <%= f.text_field :location, placeholder: "Dirección" %>
    </div>

    <div><%= f.submit "Registrarme" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
