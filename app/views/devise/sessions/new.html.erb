<div class="row devise_content">
  <h2>Iniciar Sesión</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div>
      <%= f.email_field :email, :autofocus => true, placeholder: "Correo electrónico" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Contraseña" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label "Recuérdame" %></div>
    <% end -%>

    <div><%= f.submit "Iniciar Sesión", class: "devise_submit" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>