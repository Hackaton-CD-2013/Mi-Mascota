<div class='row' >
<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3"> 
<%= form_for @pet, html: {multipart: true} do |f| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="media">
    <div class="pull-left">
      <%= image_tag @pet.photo.to_s, style: "max-width: 150px", class: 'frame-img' %>
      <div class="field">
        <%= f.label :Foto %>
        <%= f.file_field :photo %>
      </div>
    </div>
    <div class="media-body">

      <div class="form-group">
        <label class="control-label">Nombre: </label>
        <%= f.text_field :name, class:'form-control' %>
      </div>

      <div class="form-group">
        <label class="control-label">Animal: </label>
          <%= select_tag "pet[kind]", options_for_select([ Pet::CAT, Pet::DOG, Pet::BIRD, Pet::RABBIT ]), class:'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label">Raza: </label>
    <%= f.text_field :race, class:'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Peso: </label>
    <%= f.text_field :weight, class:'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label">Fecha de nacimiento: </label>
    <%= f.date_field :birth, class:'form-control' %>
  </div>

  <div class="form-group">
    <label class="control-label">H&aacute;bitos: </label>
    <%= f.text_area :habits, class:'form-control' %>
  </div>
  <div class="center">
    <button type="submit" class="pet-button">
      <%= image_tag("check-72px.png", :alt => "Enviar") %>
    </button>
   </div> 
<% end %>
</div>
</div>
