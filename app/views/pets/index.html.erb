<h1>Mascotas</h1>

<div class="divisor"></div>

<div class="row pets-grid">
  <% @pets.each do |pet| %>
    <div class="col-xs-6 col-sm-6 col-md-6 polaroid">
      <p><%= image_tag pet.photo.to_s, style: "max-width: 150px" %></p>
      <p><%= pet.name %></p>
    </div>
    <% end %>
</div>


<%= link_to 'Nueva Mascota', new_pet_path %>
