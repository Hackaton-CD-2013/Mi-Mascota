<%= form_for [@pet, @post], html: {multipart: true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if (@pet.blank?)%>
    <div class="field">
      <%= f.label :Foto %>
      <%= f.file_field :photo %>
    </div>
    <div class="form-group">
      <label class="control-label">Nombre: </label>
      <%= f.text_field :name, class:'form-control' %>
    </div>
  <% else %>
    <%= image_tag @pet.photo.to_s, style: "max-width: 150px" %>
    <p>
      <strong>Name:</strong>
      <%= @pet.name %>
    </p>
  <% end %>

  <div class="form-group">
    <label class="control-label">Direcci√≥n: </label>
    <%= f.text_field :address, class:'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Descripcion: </label>
    <%= f.text_field :description, class:'form-control' %>
  </div>
  <div class="form-group">
    <label class="control-label">Tipo: </label>
    <%= select_tag "post[kind]", options_for_select([ Post::LOST, Post::FOUND, Post::ADOPTION, Post::MATE ]), class:'form-control' %>
  </div>

  <div class="center">
    <button type="submit" class="pet-button">
      <%= image_tag("check-72px.png", :alt => "Enviar") %>
    </button>
   </div>
<% end %>
