<h1>Mascotas
<%= @title %>
</h1>

<div class="divisor"></div>

<div class="row post">
  <% @posts.each do |post| %>
    <div class="col-xs-6 col-sm-6 col-md-6 polaroid">
      <p><%= image_tag post.photo.to_s%></p>
      <p class = "polaroid-pet-name"><%= post.name %></p>
      <p class = "polaroid-pet-options">
      <%= link_to raw('<i class="icon-search"></i>'), post %>
      <%= link_to raw('<i class="icon-edit"></i>'), edit_pet_path(post) %>
      <%= link_to raw('<i class="icon-trash"></i>'), post, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
    </p>
  </div>
  <% end %>
</div>

<div class="add-button">
  <%= link_to (image_tag("plus-grey72px.png", :alt => "Anuncio Nuevo")), new_post_path %>
</div>
